#navigate workspaces next / previous

bindsym $mod+Control+Up move up
bindsym $mod+Control+Down move down
bindsym $mod+Ctrl+Left move left
bindsym $mod+Ctrl+Right move right

bindsym XF86AudioLowerVolume exec --no-startup-id /home/workingdodo/Downloads/Importante/dotfiles/Scripts/volumeControl.sh down 5
bindsym XF86AudioRaiseVolume exec --no-startup-id /home/workingdodo/Downloads/Importante/dotfiles/Scripts/volumeControl.sh up 5
bindsym XF86AudioMute exec --no-startup-id /home/workingdodo/Downloads/Importante/dotfiles/Scripts/volume_control.py toggle
#bindsym $mod+Shift+v exec --no-startup-id "killall pavucontrol; $HOME/scripts/fullscreen_wrap.sh pavucontrol -t 3"

bindsym $mod+Shift+Right move container to output $monitor_two; focus output $monitor_two
bindsym $mod+Shift+Left move container to output $monitor_one; focus output $monitor_one

bindsym $mod+Shift+p exec --no-startup-id polybar left; exec --no-startup-id polybar right
bindsym $mod+Shift+t exec --no-startup-id polybar left

bindsym $mod+Shift+x exec --no-startup-id /home/workingdodo/Downloads/Importante/dotfiles/Scripts/gaomon_general.sh
bindsym $mod+Shift+c exec --no-startup-id /home/workingdodo/Downloads/Importante/dotfiles/Scripts/gaomon_2D.sh
bindsym $mod+Shift+z exec --no-startup-id /home/workingdodo/Downloads/Importante/dotfiles/Scripts/gaomon_3D.sh

# Assigning workspaces to monitor
set $monitor_one "DVI-D-0"
set $monitor_two "HDMI-A-1"

workspace $ws1 output $monitor_one
workspace $ws2 output $monitor_two
workspace $ws3 output $monitor_one
workspace $ws4 output $monitor_two
workspace $ws5 output $monitor_one
workspace $ws6 output $monitor_two

# Autostart applications

exec --no-startup-id polybar left
exec --no-startup-id polybar right
exec --no-startup-id kdeconnect-indicator 

# Set primary monitor
exec --no-startup-id xrandr --output DVI-D-0 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI-A-1 --mode 1920x1080 --pos 1920x528 --rotate normal

# Handle monitor setup
