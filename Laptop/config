bindsym XF86AudioLowerVolume exec --no-startup-id $DOTFILES_DIR/Scripts/volumeControl.sh down 5
bindsym XF86AudioRaiseVolume exec --no-startup-id $DOTFILES_DIR/Scripts/volumeControl.sh up 5
bindsym XF86AudioMute exec --no-startup-id $DOTFILES_DIR/Scripts/volumeControl.sh mute

bindsym $mod+Shift+Right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Down move down

bindsym XF86MonBrightnessDown exec --no-startup-id $DOTFILES_DIR/Scripts/brightnessControl.sh down
bindsym XF86MonBrightnessUp exec --no-startup-id $DOTFILES_DIR/Scripts/brightnessControl.sh up

bindsym $mod+Shift+p exec --no-startup-id polybar main

# Autostart applications
#exec --no-startup-id xfce4-power-manager
#exec --no-startup-id fix_xcursor

#Polybar
exec --no-startup-id polybar main

exec --no-startup-id setxkbmap pt -option 'numpad:microsoft'

# Start i3bar to display a workspace bar (plus the system information i3status if available)

# hide/unhide i3status bar
bindsym $mod+m bar mode toggle

